# Backend Environment Configuration

# Database
DATABASE_URL=sqlite:///./rover_platform.db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Claude AI API
CLAUDE_API_KEY=your-claude-api-key-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# API Security
API_KEY_LENGTH=32
API_KEY_PREFIX=rmk_  # Rover Mission Key prefix

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Environment
ENVIRONMENT=development  # development, staging, production

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Hardware Configuration (Optional)
ARDUINO_SKETCH_DIR=/app/sketches
ARDUINO_LIBRARIES_DIR=/app/libraries
HARDWARE_CONFIG_FILE=/app/config/hardware.json

# Security Headers
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000

# Session Configuration
SESSION_LIFETIME_HOURS=24
MAX_SESSIONS_PER_USER=5

# 2FA Configuration
TOTP_ISSUER=RoverMissionControl
TOTP_ALGORITHM=SHA256
TOTP_DIGITS=6
TOTP_INTERVAL=30

# Email Configuration (for password reset)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=noreply@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=Rover Mission Control

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30